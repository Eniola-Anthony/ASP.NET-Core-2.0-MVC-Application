@model Feedback


    
  
        <form asp-action="Index" role="form" method="post">
            <div class="form-group">
                <label asp-for="Name" class="col-md-2"></label>
                <div class="col-md-12">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="col-md-2"></label>
                <div class="col-md-12">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group">
                <label asp-for="Message" class="col-md-2"></label>
                <div class="col-md-12">
                    <textarea asp-for="Message" class="form-control"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
            </div>

            <div class="form-check">
                <input type="checkbox" asp-for="ContactMe" class="form-check-input col-md-2" />
                <label asp-for="ContactMe" class="form-check-label col-md-5"></label>
                
            </div>

            

            <div class="form-group">
                <div class="col-md-5">
                    <input type="submit" name="save" value="Send Feedback" class="btn btn-primary" />
                </div>
            </div>

        </form>
  
   